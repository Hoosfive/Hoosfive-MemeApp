<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23213F"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:labelText="@string/loginHint"
        app:helperText=" "
        app:errorEnabled="true"
        app:primaryColor="@color/colorAccent"
        app:useDenseSpacing="true"

        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/loginLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"
            android:singleLine="false"
            android:textColor="@color/colorTextLoginActivity"
            android:background="@color/colorTextLayoutBackground"
            tools:ignore="RtlHardcoded" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/passLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:labelText="@string/passHint"
        app:helperText=" "
        app:endIcon="@drawable/ic_eye"
        app:primaryColor="@color/colorAccent"
        app:helperTextColor="@color/colorTextLoginActivity"
        app:useDenseSpacing="true"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/passLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/colorTextLoginActivity"
            android:background="@color/colorTextLayoutBackground"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"
            tools:ignore="RtlHardcoded" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <RelativeLayout
        android:id="@+id/loginBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kusu.loadingbutton.LoadingButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/enterBtn"
            android:textColor="@color/colorLoginLoader"
            app:lb_loaderColor="@color/colorLoginLoader"
            tools:targetApi="lollipop" />
    </RelativeLayout>

</LinearLayout>

